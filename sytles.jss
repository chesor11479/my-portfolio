/* Apply Background Image to the Entire Page */
body {
    background: url('images/rs.jpg') no-repeat center center fixed;
    background-size: cover;
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
    color: white; /* Ensures text is visible */
}

/* Ensure Sections Have a Semi-Transparent Background */
section {
    background: rgba(0, 0, 0, 0.6); /* Dark semi-transparent overlay */
    padding: 20px;
    border-radius: 10px;
    width: 80%;
    margin: 20px auto;
    text-align: center;
}
